<%= stylesheet_link_tag "comments.css" %>

<article>
  <div class="comment-container">
    <%= image_tag(comment.user.avatar, size: "60x60", class:"comment-avatar") if comment.user.avatar.present? %>
    <div class="comment-main">
      <div class="comment-data">
        <span class="comment-creator">
          <%= comment.user.full_name %>
        </span>
        <span class="comment-date">
          <%= comment.created_at.strftime("%d %b %Y %H:%M") %>
        </span>
      </div>
      <div class="comment-text-container">
        <p><%= comment.content %></p>
      </div>
    </div>
  </div>
</article>